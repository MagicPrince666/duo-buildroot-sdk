#!/bin/sh
#
# Mounting OverlayFS...
#

BLOCK=/dev/mmcblk0p4

# emmc分区和sd分区不同
if [ -e "/dev/mmcblk0rpmb" ]; then
    BLOCK=/dev/mmcblk0p5
fi

init_sys()
{
    mount -n -t ext4 $BLOCK -o rw,noatime /overlay
    ret=$?
    echo "ret:$ret"
    if [ $ret -ne 0 ];then
        echo "Start format $BLOCK"
        mkfs.ext4 $BLOCK
        mount -n -t ext4 $BLOCK -o rw,noatime /overlay
        echo "Format & mount $BLOCK success"
    fi

        mkdir -p /overlay/upper /overlay/work
        mount -n -t overlay overlayfs:/overlay -o rw,noatime,lowerdir=/,upperdir=/overlay/upper,workdir=/overlay/work /media

        mount -n /proc -o noatime,--move /media/proc
        pivot_root /media /media/rom
        mount -n /rom/dev -o noatime,--move /dev
        mount -n /rom/dev/shm -o noatime,--move /dev/shm
        mount -n /rom/tmp -o noatime,--move /tmp
        mount -n /rom/sys -o noatime,--move /sys
        mount -n /rom/run -o noatime,--move /run 
        mount -n /rom/media -o noatime,--move /media
}

init_sys
